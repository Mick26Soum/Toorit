<Product Sign Up Page>

    <%= form_for @product, :html => {:multipart => true} do |f| %>
    <% if @product.errors.any? %>
    <div class ="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="control-label">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Title of Product" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, placeholder: "Provide Brief Description"%>
    </div>

     <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location, placeholder: "Location" %>
     </div>

     <div class="field">
      <%= f.label :Image %>
      <%= f.file_field :avatar %>
     </div>

    <div class="actions"><%= f.submit "Submit", :class => 'btn btn-primary' %></div>
<% end %>